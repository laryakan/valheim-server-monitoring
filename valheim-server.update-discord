#!/bin/bash

CWD=$(dirname "$0")
# Update server status
"$CWD/valheim-server.status" --for-webhook | "$CWD/valheim-server.webhook.json.sender" --status

# Output the 10 last stdout logs
tail -10 < $(ls -1 $CWD/valheim-logs.d/*.stdout.log | tail -1) | sed ':a;N;$!ba;s/\n/\\n/g' | echo "{\"embeds\":[\
{\"title\":\"Last Logs\",\"color\":10181046,\"description\":\"$(</dev/stdin)\"}\
]}" | "$CWD/valheim-server.webhook.json.sender" "$(head -1 $CWD/valheim-server.webhook.last-logs-message-id)"
